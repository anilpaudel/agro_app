<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:id="@+id/infoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_category"
                    android:layout_width="200dp"
                    android:layout_height="140dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Property Image"
                    />

                <TextView
                    android:id="@+id/view_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="The Minor Project"
                    android:background="#39E600"
                    android:textColor="#222222"
                    android:gravity="center_horizontal"
                    android:padding="10px"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/view_issue_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Anil Paudel-072BEX404"
                    android:gravity="center_horizontal"
                    android:background="#39E600"
                    android:textColor="#222222"
                    android:padding="10px"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/view_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Ayush Bajracharya-072BEX418"
                    android:background="#39E600"
                    android:textColor="#222222"
                    android:padding="10px"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/view_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Deepak Kandel-072BEX417"
                    android:background="#39E600"
                    android:textColor="#222222"
                    android:padding="10px"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Prem Pandey-072BEX431"
                    android:background="#39E600"
                    android:textColor="#222222"
                    android:padding="10px"
                    android:textSize="19sp" />


            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />




</android.support.v4.widget.DrawerLayout>